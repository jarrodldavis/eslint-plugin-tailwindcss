{
  "name": "@jarrodldavis/tailwindcss-clsx",
  "version": "0.1.3",
  "description": "TypeScript type generator for Tailwind utility classes and `clsx`",
  "main": "dist/index.js",
  "bin": {
    "tailwindcss-clsx": "dist/index.js",
    "twclsx": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "run-s -ns lint:* build",
    "lint": "run-s -cns lint:*",
    "lint:format": "prettier --check .",
    "lint:ts": "tsc --noEmit",
    "lint:es": "eslint .",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postversion": "run-s push:*",
    "push:npm": "npm publish",
    "push:github": "npm publish --registry=https://npm.pkg.github.com",
    "push:branch": "git push",
    "push:tags": "git push --tags"
  },
  "engines": {
    "node": "^12.18.3 || ^14.14.0",
    "npm": "^6.14.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarrodldavis/tailwindcss-clsx.git"
  },
  "keywords": [
    "typescript",
    "types",
    "generator",
    "code-generator",
    "codegen",
    "tailwind",
    "tailwindcss",
    "css",
    "functional-css",
    "utility-css"
  ],
  "author": "Jarrod Davis <developer@jarrodldavis.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jarrodldavis/tailwindcss-clsx/issues"
  },
  "homepage": "https://github.com/jarrodldavis/tailwindcss-clsx#readme",
  "peerDependencies": {
    "clsx": "^1.1.1",
    "postcss": "^7.0.35",
    "tailwindcss": "^1.9.5"
  },
  "dependencies": {
    "comlink": "^4.3.0",
    "ora": "^5.1.0",
    "postcss-selector-parser": "^6.0.4",
    "sade": "^1.7.4",
    "supports-color": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.0",
    "@types/sade": "^1.7.2",
    "@types/supports-color": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "clsx": "^1.1.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-node": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.35",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.9.5",
    "typescript": "^4.0.3"
  }
}
